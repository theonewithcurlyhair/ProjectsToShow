@using Model.Entities
@model Model.Entities.User
@{
    Layout = null;
}



<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=0, minimal-ui">
    <title>BigSystemSolutions - Dashboard</title>
    <meta content="Admin Dashboard" name="description" />

    <link rel="shortcut icon" href="~/images/favicon.ico">
    @Styles.Render("~/Content/css")
</head>

<body>

    <!-- Begin page -->
    <div class="wrapper-page">

        <div class="card">
            <div class="card-body">

                <h3 class="text-center m-0">
                    <a href="/dashboard" class="logo logo-admin"><img src="~/images/logo1.png" height="400" alt="logo"></a>
                </h3>

                <div class="p-3">
                    <h4 class="text-muted font-18 m-b-5 text-center">Welcome Back !</h4>
                    <p class="text-muted text-center">Sign in to continue.</p>



                    <form class="form-horizontal m-t-30" action="/Dashboard/Login" method="post">
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true)

                        @if (Model != null && Model.Errors.Count != 0)
                        {
                            foreach (Error e in Model.Errors)
                            {
                                <div class="alert alert-danger" role="alert">
                                    <strong>@e.ErrorName</strong>
                                </div>
                            }
                        }


                    <div class="form-group">
                        <label for="username">Employee ID</label>

                        @if (Model != null && Model.ID > 0)
                        {
                            <input type="text" class="form-control" id="username" placeholder="Enter Employee ID" name="ID" value="@Model.ID" />
                        }
                        else
                        {
                            <input type="text" class="form-control" id="username" placeholder="Enter Employee ID" name="ID" />
                        }

                    </div>


                        <div class="form-group">
                            <label for="userpassword">Password</label>
                            <input type="password" class="form-control" id="userpassword" placeholder="Enter password" name="Password">
                        </div>

                        <div class="form-group row m-t-20">
                            @*<div class="col-6">
                                    <div class="custom-control custom-checkbox">
                                        <input type="checkbox" class="custom-control-input" id="customControlInline">
                                        <label class="custom-control-label" for="customControlInline">Remember me</label>
                                    </div>
                                </div>*@
                            <div class="col-6 text-right">
                                <button class="btn btn-primary w-md waves-effect waves-light" type="submit">Log In</button>
                            </div>
                        </div>

                        @*<div class="form-group m-t-10 mb-0 row">
                                <div class="col-12 m-t-20">
                                    <a href="@Url.Action("RecoverPassword", "pages")" class="text-muted"><i class="mdi mdi-lock"></i> Forgot your password?</a>
                                </div>
                            </div>*@
                    </form>
                </div>

            </div>
        </div>

        <div class="m-t-40 text-center">
            @*<p>Don't have an account ? <a href="@Url.Action("register","pages")" class=" text-primary"> Signup Now </a> </p>*@
            <p>© 2020 BigSystemSolutions Crafted with <i class="mdi mdi-heart text-danger"></i> by Two Hommies</p>
        </div>

    </div>

    @Scripts.Render("~/bundles/jquery")
</body>
</html>
